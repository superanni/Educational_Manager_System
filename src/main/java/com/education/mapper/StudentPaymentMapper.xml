<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.education.mapper.StudentPaymentMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.education.entity.StudentPayment">
        <id column="payment_id" property="paymentId" />
        <result column="student_id" property="studentId" />
        <result column="staff_id" property="staffId" />
        <result column="payment_situation" property="paymentSituation" />
        <result column="payment_method" property="paymentMethod" />
        <result column="payment_time" property="paymentTime" />
        <result column="discount_amount" property="discountAmount" />
        <result column="should_amount" property="shouldAmount" />
        <result column="real_amount" property="realAmount" />
        <result column="debt_amount" property="debtAmount" />
        <result column="payment_remark" property="paymentRemark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        payment_id, student_id, staff_id, payment_situation, payment_method, payment_time, discount_amount, should_amount, real_amount, debt_amount, payment_remark
    </sql>

</mapper>
